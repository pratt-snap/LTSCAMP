<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= camp.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=camp._id %>" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= camp.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" value="<%= camp.image %>">
                </div>
				  <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value="<%= camp.description %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" value="<%= camp.price %>" min="0.00" step="1.00">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>